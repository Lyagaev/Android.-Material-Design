<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.AndroidMaterialDesign" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_200</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="MyTheme">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimaryMars</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryVariantMars</item>
        <item name="colorOnPrimary">@color/colorOnPrimaryMars</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/colorSecondaryMars</item>
        <item name="colorSecondaryVariant">@color/colorSecondaryVariantMars</item>
        <item name="colorOnSecondary">@color/colorOnSecondaryMars</item>

        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="colorSecondaryAlpha40">@color/colorSecondaryMarsAlpha40</item>
    </style>
</resources>